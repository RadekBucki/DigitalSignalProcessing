<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<Pane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="frontend.SignalTabController">
    <Button fx:id="load" layoutX="10" layoutY="10" mnemonicParsing="false" onAction="#loadSignal" text="Load"
            textAlignment="CENTER"/>
    <Button fx:id="save" disable="true" layoutX="60" layoutY="10" mnemonicParsing="false" onAction="#saveSignal" text="Save"
            textAlignment="CENTER"/>
    <ComboBox fx:id="signalTypes" layoutX="90.0" layoutY="40" prefHeight="25.0" prefWidth="440.0"
              promptText="Choose signal type"/>
    <Label layoutX="10.0" layoutY="44.0" text="Signal type"/>
    <TitledPane animated="false" layoutX="10.0" layoutY="76.0" maxWidth="520.0" minWidth="520.0" prefWidth="520.0"
                text="Parameters">
        <AnchorPane maxWidth="520.0" minWidth="520.0" prefWidth="520.0">
            <VBox prefWidth="520.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                <GridPane fx:id="parametersGrid" maxWidth="500.0" minWidth="500.0" prefHeight="30.0" prefWidth="500.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Group>
                        <Label layoutY="4.0" prefHeight="17.0" prefWidth="486.0" text="param1"/>
                        <TextField layoutX="334.0" maxHeight="25.0" minHeight="25.0" prefHeight="25.0"/>
                    </Group>
                </GridPane>
                <Button fx:id="generateButton" disable="true" mnemonicParsing="false" onAction="#createSignalInstance"
                        text="Generate" textAlignment="CENTER"/>
            </VBox>
        </AnchorPane>
    </TitledPane>
    <VBox fx:id="rightPanel" layoutX="540.0" visible="false">
        <Label layoutX="10.0" layoutY="14.0" style="-fx-font-size: 20pt;" text="Charts"/>
        <ImageView fx:id="amplitudeTimeChart" fitHeight="220.0" fitWidth="400.0" pickOnBounds="true"
                   preserveRatio="true"/>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <ImageView fx:id="histogram" fitHeight="220.0" fitWidth="400.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <Slider fx:id="binNumberSlider" majorTickUnit="5.0" max="20.0" min="5.0" minorTickCount="1"
                    orientation="VERTICAL" prefHeight="190.0" prefWidth="14.0" showTickLabels="true"
                    showTickMarks="true" value="10.0"/>
        </HBox>
        <Label layoutX="10.0" layoutY="14.0" style="-fx-font-size: 20pt;" text="Statistics"/>
        <GridPane fx:id="statisticsGrid" layoutX="540.0" layoutY="470.0" prefHeight="30.0" prefWidth="450.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Group>
                <Label layoutY="4.0" prefHeight="17.0" prefWidth="300.0" text="param1"/>
                <Label layoutX="300.0" prefHeight="17.0" prefWidth="300.0" text="value1"/>
            </Group>
        </GridPane>
    </VBox>
</Pane>
