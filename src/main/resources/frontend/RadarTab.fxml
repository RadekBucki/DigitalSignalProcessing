<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.RadarTabController">
    <VBox layoutX="10.0" layoutY="10.0" spacing="10.0">
        <Label prefHeight="37.0" prefWidth="222.0" text="Math operations">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <padding>
                <Insets left="10.0" top="10.0" />
            </padding>
        </Label>
        <HBox prefHeight="35.0" prefWidth="1000.0" spacing="10.0">
            <Label prefWidth="100.0" text="Signal 1">
                <padding>
                    <Insets top="4.0" />
                </padding>
            </Label>
            <ComboBox fx:id="signal1ComboBox" onAction="#onUpdateMathOperationsComboBox" prefHeight="25.0" prefWidth="440.0" promptText="Choose signal" />
        </HBox>
        <HBox spacing="10.0">
            <Label prefWidth="100.0" text="Signal 2">
                <HBox.margin>
                    <Insets top="4.0" />
                </HBox.margin>
            </Label>
            <ComboBox fx:id="signal2ComboBox" onAction="#onUpdateMathOperationsComboBox" prefHeight="25.0" prefWidth="440.0" promptText="Choose signal" />
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <Button fx:id="applyOperationButton" disable="true" mnemonicParsing="false" onAction="#mathOperation" text="Apply operation" textAlignment="CENTER" />
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</Pane>
